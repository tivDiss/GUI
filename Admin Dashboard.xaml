<Window x:Class="driveCom.Admin_Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:driveCom"
        Title="Admin_Dashboard"
        Height="1587"
        Width="2245"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        WindowState="Maximized">
    <Border Background="white"
            Padding="30"
            CornerRadius="0"
            MouseDown="Border_MouseDown_1"
            MouseLeftButtonDown="Border_MouseDown_1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <!-- Sidebar (fixed width) -->
                <ColumnDefinition Width="*" />
                <!-- Main content (scrollable) -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Sidebar Menu (Fixed) -->
            <Border CornerRadius="10"
                    Background="Black"
                    Grid.Column="0"
                    Grid.RowSpan="2">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"
                                      BlurRadius="20"
                                      Opacity="0.4" />
                </Border.Effect>
                <StackPanel VerticalAlignment="Center">
                    <Button Style="{StaticResource menuButton}"
                            Margin="15 40 15 50"
                            Background="White"
                            Click="Home">
                        <Image Source="/Images/home.png"
                               Width="20" />
                    </Button>
                    <Button Style="{StaticResource menuButton}"
                            Margin="15 40 15 50"
                            Background="Yellow">
                        <Image Source="/Images/graph.png"
                               Width="20" />
                    </Button>
                    <Button Style="{StaticResource menuButton}"
                            Margin="15 40 15 50"
                            Background="White"
                            Click="Car_list">
                        <Image Source="/Images/car.png"
                               Width="20" />
                    </Button>
                    <Button Style="{StaticResource menuButton}"
                            Margin="15 40 15 50"
                            Background="White"
                            Click="news">
                        <Image Source="/Images/news.png"
                               Width="20" />
                    </Button>
                </StackPanel>
            </Border>

            <!-- Scrollable Main Content -->
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Dashboard Title -->
                    <StackPanel Grid.Row="0"
                                Grid.ColumnSpan="3"
                                Background="Azure"
                                Margin="20">
                        <TextBlock Text="DASHBOARD"
                                   FontSize="50"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10" />
                    </StackPanel>

                   

                    <!-- Buttons -->
                    <Button Content="Add Car"
                            Grid.Row="2"
                            Background="Blue"
                            BorderThickness="1"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontWeight="Bold"
                            Grid.Column="0"
                            Width="200"
                            Height="50"
                            HorizontalAlignment="Center"
                            Margin="100,10"
                            Click="Button_Click" />
                    <Button Content="Update Details"
                            Grid.Row="2"
                            Grid.Column="1"
                            Background="Blue"
                            BorderThickness="1"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="200"
                            Height="50"
                            HorizontalAlignment="Center"
                            Margin="100,10"
                            Click="update" />
                    <Button Content="Delete Car"
                            Grid.Row="2"
                            Grid.Column="2"
                            Background="Blue"
                            BorderThickness="1"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="200"
                            Height="50"
                            HorizontalAlignment="Center"
                            Margin="20,10"
                            Click="delete" />

                    <!-- Car List -->
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Grid.ColumnSpan="3"
                               HorizontalAlignment="Center"
                               Margin="0 20"
                               Text="Car List"
                               Foreground="Black"
                               FontSize="30" />
                    <DataGrid x:Name="CarDataGrid"
                              Grid.Row="4"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              Margin="20"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              AlternatingRowBackground="LightGray"
                              FontSize="14" />

                    <!-- Customer Request -->
                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               Grid.ColumnSpan="3"
                               HorizontalAlignment="Center"
                               Text="Customer Request"
                               Foreground="Black"
                               FontSize="30" />
                    <DataGrid x:Name="customerGrid"
                              Grid.Row="6"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              Margin="20"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              AlternatingRowBackground="LightGray"
                              FontSize="14" />

                    <!-- Footer -->
                    <Border Grid.Row="7"
                            Grid.Column="0"
                            Margin="0 50"
                            
                            Grid.ColumnSpan="3"
                            CornerRadius="40"
                            Height="100"
                            Width="auto"
                            Background="Transparent">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch">
                            <TextBlock x:Name="txtDateTime"
                                       FontSize="30"
                                       Foreground="Black"
                                       FontWeight="Bold"
                                       Margin="5"
                                       TextAlignment="Center" />
                            <TextBlock Text="www.drive .com"
                                       FontSize="20"
                                       Foreground="Black"
                                       TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
