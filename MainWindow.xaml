<Window x:Class="driveCom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:driveCom"
        mc:Ignorable="d"
        Height="720"
        Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized"
        AllowsTransparency="False"
        
        Name="window">

    <Border Background="White"
            Padding="30"
            CornerRadius="0"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseDown">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Border CornerRadius="10"
                    Background="Black">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"
                                      BlurRadius="20"
                                      Opacity="0.4" />
                </Border.Effect>
                <Grid>
                    <StackPanel VerticalAlignment="Center">
                        <Button Style="{StaticResource menuButton}"
                                Margin="15 40 15 50"
                                Background="Yellow">
                            <Image Source="/Images/home.png"
                                   Width="20" />
                        </Button>
                        <Button Style="{StaticResource menuButton}"
                                Margin="15 40 15 50"
                                Background="White"
                                Click="admin_d">
                            <Image Source="/Images/graph.png"
                                   Width="20" />
                        </Button>
                        <Button Style="{StaticResource menuButton}"
                                Margin="15 40 15 50"
                                Background="White"
                                Click="Car_Click">
                            <Image Source="/Images/car.png"
                                   Width="20" />
                        </Button>
                        <Button Style="{StaticResource menuButton}"
                                Margin="15 40 15 50"
                                Background="White"
                                Click="News">
                            <Image Source="/Images/news.png"
                                   Width="20" />
                        </Button>
                    </StackPanel>
                    
                </Grid>
            </Border>
            <Border x:Name="HomePage"
                    Style="{StaticResource borderPage}">
                <Border.RenderTransform>
                    <TranslateTransform Y="0" />
                </Border.RenderTransform>
                <Border CornerRadius="25">
                    <Border.Background>
                        <ImageBrush Stretch="Fill"
                                    Opacity="0.6"
                                    ImageSource="/Images/bg3.jpg" />
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />


                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="top"
                                    Margin=" 30 30 0 0">
                            <TextBlock TextAlignment="Center"
                                       Foreground="White"
                                       FontWeight="ExtraBold"
                                       FontSize="50">
                                Thinking about the end right from 
                                       <LineBreak />
                                        the start


                            </TextBlock>
                            <TextBlock
                                TextAlignment="Center"
                                Margin="0 30"
                                FontSize="20"
                                FontWeight="DemiBold"
                                Foreground="WhiteSmoke">Welcome to Drive .Com!<LineBreak />

                                Join us on an exciting journey to discover your dream car.<LineBreak /> Whether you're searching for a sleek sports car,<LineBreak /> a reliable family vehicle, 
                                or an eco-friendly ride,<LineBreak /> we've got you covered.<LineBreak /> Start your adventure with us today,<LineBreak />
                                and find the car that suits your needs and style.</TextBlock>
                            <Button Width="200"
                                    Height="50"
                                    Background="White"
                                    BorderThickness="1"
                                    BorderBrush="Transparent"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    FontSize="20"
                                    Margin="100"
                                    Click="Car_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                Get Started
                            </Button>



                        </StackPanel>

                    </Grid>
                </Border>
            </Border>
        </Grid>



    </Border>
</Window>
