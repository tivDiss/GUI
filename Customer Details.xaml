<Window x:Class="driveCom.Customer_Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:driveCom"
        mc:Ignorable="d"
        Title="Customer_Details"
        Height="350"
        Width="600">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />


            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />


        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="20"
                    VerticalAlignment="Top">
            <TextBlock Text="Enquire Now"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />
            
            <TextBlock Text="Customer Name"
                       FontSize="10"
                       FontWeight="Bold"
                       Margin="5 0" />
            <TextBox x:Name="txtCname"
                     Margin="0,5" />
            <TextBlock Text="Mobile number"
                       FontSize="10"
                       FontWeight="Bold"
                       Margin="5 0" />
            <TextBox x:Name="txtMno"
                     Margin="0,5" />
            <TextBlock Text="Email"
                       FontSize="10"
                       FontWeight="Bold"
                       Margin="5 0" />
            <TextBox x:Name="txtEmail"
                     Margin="0,5" />
            <TextBlock Text="Comments"
                       FontSize="10"
                       FontWeight="Bold"
                       Margin="5 0" />
            <TextBox x:Name="txtcom"
                     Margin="0,5" />
            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="20"
                        Orientation="Horizontal"
                        VerticalAlignment="Top">
                <Button Content="Enquire Now"
                        Width="100"
                        HorizontalAlignment="Left"
                        Margin="100,10"
                        Click="Button_Click" />
                <Button Content="Cancel"
                        Width="100"
                        HorizontalAlignment="Right"
                        Margin="100 10" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
