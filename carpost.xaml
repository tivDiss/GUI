<UserControl x:Class="driveCom.carpost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="390"
             Width="300">
    <Border Background="White"
            CornerRadius="8"
            Padding="10"
            Margin="10"
            BorderBrush="#DADADA"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Image Section -->
            <Image Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Grid.Row="0"
                   Stretch="Fill"
                   Margin="0 0 0 10"
                   Height="250"
                   Width="250" />

            <!-- Title and Year -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical">
                <TextBlock Text="{Binding CarName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="Black"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding Year, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           Margin="0 5 0 0" />
            </StackPanel>

            <!-- Price and Button -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal">
                <TextBlock Text="{Binding Price, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="Red"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mileage,RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           Margin="100 0 0 0"/>

            </StackPanel>
            <StackPanel Grid.Row="3">
                <Button Width="100"
                        Height="30"
                        Background="Blue"
                        BorderThickness="1"
                        BorderBrush="Transparent"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Margin="35 0"
                        Click="EnquireNow"
                        FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    Enquire now
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
